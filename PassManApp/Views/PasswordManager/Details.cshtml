@model PassManApp.Models.PasswordEntry

@{
    ViewData["Title"] = "Password Details";
}

<h2>Password Entry Details</h2>

<div>
    <h4>Website: @Model.Website</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Username
        </dt>
        <dd class="col-sm-10">
            @Model.Username
        </dd>
        <dt class="col-sm-2">
            Password
        </dt>
        <dd class="col-sm-10">
            @Model.Password
        </dd>
        <dt class="col-sm-2">
            Created At
        </dt>
        <dd class="col-sm-10">
            @Model.CreatedAt.ToString("yyyy-MM-dd")
        </dd>
    </dl>
</div>

<p>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</p>
